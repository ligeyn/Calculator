<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculator.MainActivity"
    >

    <TextView
        android:textColor="@color/colorBack"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_delete"
        android:layout_alignParentRight="true"
        android:textSize="40dp"/>

    <Button
        android:background="@color/colorBack"
        android:text="1"
        android:layout_above="@+id/btn_dot"
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:text="2"
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_zero"
        android:layout_toRightOf="@+id/btn_one"/>
    <Button
        android:background="@color/colorBack"
        android:text="3"
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ravno"
        android:layout_toRightOf="@+id/btn_two"/>
    <Button
        android:background="@color/colorBack"
        android:text="4"
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_one"/>
    <Button
        android:background="@color/colorBack"
        android:text="5"
        android:layout_above="@+id/btn_two"
        android:layout_toRightOf="@+id/btn_four"
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:layout_above="@+id/btn_three"
        android:layout_toRightOf="@+id/btn_five"
        android:text="6"
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:layout_above="@+id/btn_four"
        android:text="7"
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:layout_above="@+id/btn_five"
        android:text="8"
        android:layout_toRightOf="@+id/btn_seven"
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:layout_above="@+id/btn_six"
        android:layout_toRightOf="@+id/btn_eight"
        android:text="9"
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack"
        android:text="0"
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_dot"/>
    <Button
        android:background="@color/colorBack"
        android:text="C"
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_seven"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_delit" />
    <Button
        android:background="@color/colorBack1"
        android:layout_above="@+id/btn_delit"
        android:layout_alignParentRight="true"
        android:text="DEL"
        android:id="@+id/btn_clean"
        android:layout_toRightOf="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@color/colorBack1"
        android:text="*"
        android:id="@+id/btn_umnoj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_minus"
        android:layout_toRightOf="@+id/btn_six"
        android:layout_alignParentRight="true"
        />
    <Button
        android:background="@color/colorBack1"
        android:layout_above="@+id/btn_umnoj"
        android:layout_toRightOf="@+id/btn_nine"
        android:text="/"
        android:id="@+id/btn_delit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <Button
        android:background="@color/colorBack1"
        android:text="+"
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn_ravno"/>
    <Button
        android:background="@color/colorBack1"
        android:text="-"
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_plus"
        android:layout_toRightOf="@+id/btn_three"
        android:layout_alignParentRight="true"/>
    <Button
        android:background="@color/colorBack"
        android:text="="
        android:id="@+id/btn_ravno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_zero"
        />

    <Button
        android:background="@color/colorBack"
        android:id="@+id/btn_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:layout_alignParentBottom="true" />
</RelativeLayout>
